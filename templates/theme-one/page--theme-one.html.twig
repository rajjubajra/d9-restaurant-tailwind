<div class="container mx-auto p-4">

  <header role="banner">
    {{ page.header }}
  </header>



  <div id="main-nav"></div>
  

  <main role="main">
    <h1 class="text-2xl">Theme One</h1> 
  </main>

  {% if page.footer %}
    <footer role="contentinfo">
      {{ page.footer }}
    </footer>
  {% endif %}

</div>{# /.layout-container #}


<script>
  window.onload = function() {
    try{
      getMenu();
      getData();

    }catch(err){
      console.log("Error:", err);
    } 
  }

  const getMenu = async () =>{
    const url = `/d9-restaurant/jsonapi/menu_items/main`;
    const response_data = await fetch(url,{
      method: 'GET',
      headers: {
        Accept: 'application/vnd.api+json'
      }
    });
    const data = await response_data.json();
    console.log("MENU",data);


    
  }

  const getData = async () =>{

    const url = `/d9-restaurant/jsonapi/node/home_page?include=field_home_block_2_image,field_home_block_3_col_1_image,field_home_block_3_col_2_image,field_home_block_3_col_3_image,field_home_block_4_image&fields[node--home_page]=title,field_home_block_1_text,field_home_block_2_text, field_home_block_3_col_1_text,field_home_block_3_col_2_text,field_home_block_3_col_3_text&fields[file--file]=uri,filesize`;

    const response_data = await fetch(url, {
      method: "GET",
      headers:{
        Accept: 'application/vnd.api+json'
      }
    });
    const data = await response_data.json();

    console.log("JSON DATA", data);


  }

</script>
